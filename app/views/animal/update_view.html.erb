<div class="container">

<h1>수정</h1>

<form action="/update/<%= @one_post.id %>" method="POST">

    <div class="form-group">
        <textarea type="text" class="form-control" name="title" placeholder="소개할 동물 이름"><%= @one_post.title %></textarea>
    </div>
    
    <div class="form-group">
        <textarea class='form-control' name="content" placeholder="특징" rows="10"><%= @one_post.content %></textarea>
    </div>
    
    <button type="submit">수정하기</button>
</form>



    
    
</form>
</div>